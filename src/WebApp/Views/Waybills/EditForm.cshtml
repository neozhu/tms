﻿@model WebApp.Models.Waybill
<!-- begin master section -->
<div  class="main-form">
<!--begin waybill form  -->
<form id="waybill_form" method="post" novalidate="novalidate" >
@Html.AntiForgeryToken()
   @Html.HiddenFor(x=>x.Id)
 <fieldset>
 <div class="form-group form-group-sm">
      <div class="row">

        <!--订单号-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label"><span class="required">@Html.DisplayNameFor(model => model.OrderNo)</span> </label>
			@Html.EditorFor(x => x.OrderNo, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.OrderNo) } })
      
         </div>

        <!--状态-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.Status) </label>
			@Html.EditorFor(x => x.Status, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Status) } })
      
         </div>

        <!--客户编码-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label"><span class="required">@Html.DisplayNameFor(model => model.CustomerId)</span> </label>
			@Html.EditorFor(x => x.CustomerId, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.CustomerId) } })
      
         </div>

        <!--客户简称-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.CustomerName) </label>
			@Html.EditorFor(x => x.CustomerName, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.CustomerName) } })
      
         </div>

        <!--计划项目号-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.ProjectNo) </label>
			@Html.EditorFor(x => x.ProjectNo, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.ProjectNo) } })
      
         </div>

        <!--提货单号-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.PickNo) </label>
			@Html.EditorFor(x => x.PickNo, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.PickNo) } })
      
         </div>
	   </div>
    </div>
 <div class="form-group form-group-sm">
      <div class="row">

       <!--配送日期-->
       <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label"><span class="required">@Html.DisplayNameFor(model => model.ShippedDate)</span> </label>
            <div class="input-group">
			  @Html.EditorFor(x => x.ShippedDate, 
                         new { htmlAttributes = new { @class = "form-control datepicker hasDatepicker",
                               placeholder = Html.DisplayNameFor(x => x.ShippedDate ) } })
               <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
			 </div>
         </div>

        <!--起运地-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.Original) </label>
			@Html.EditorFor(x => x.Original, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Original) } })
      
         </div>

        <!--送货区域-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.Destination) </label>
			@Html.EditorFor(x => x.Destination, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Destination) } })
      
         </div>

        <!--定单抬头文本信息-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.Remark) </label>
			@Html.EditorFor(x => x.Remark, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Remark) } })
      
         </div>

        <!--物料编码-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.ProductNo) </label>
			@Html.EditorFor(x => x.ProductNo, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.ProductNo) } })
      
         </div>

        <!--批次-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.LotNo) </label>
			@Html.EditorFor(x => x.LotNo, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.LotNo) } })
      
         </div>
	   </div>
    </div>
 <div class="form-group form-group-sm">
      <div class="row">

		<!--交货数量-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label"><span class="required">@Html.DisplayNameFor(model => model.Qty)</span> </label>
            @Html.EditorFor(x => x.Qty, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.Qty) } })

        </div>

		<!--重货(kg)-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.Weight) </label>
            @Html.EditorFor(x => x.Weight, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.Weight) } })

        </div>

		<!--体积（m3)-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.Cube) </label>
            @Html.EditorFor(x => x.Cube, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.Cube) } })

        </div>

		<!--运价-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.SPrice) </label>
            @Html.EditorFor(x => x.SPrice, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.SPrice) } })

        </div>

		<!--运费（元）-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.SAmount) </label>
            @Html.EditorFor(x => x.SAmount, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.SAmount) } })

        </div>

		<!--搬运单价-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.CPrice) </label>
            @Html.EditorFor(x => x.CPrice, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.CPrice) } })

        </div>
	   </div>
    </div>
 <div class="form-group form-group-sm">
      <div class="row">

		<!--搬运费（元）-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.CAmount) </label>
            @Html.EditorFor(x => x.CAmount, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.CAmount) } })

        </div>

        <!--备注-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.Way) </label>
			@Html.EditorFor(x => x.Way, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Way) } })
      
         </div>

        <!--销售雇员-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.Sales) </label>
			@Html.EditorFor(x => x.Sales, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Sales) } })
      
         </div>

        <!--销售小组-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.SalesGroup) </label>
			@Html.EditorFor(x => x.SalesGroup, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.SalesGroup) } })
      
         </div>

        <!--备注1-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.Remark1) </label>
			@Html.EditorFor(x => x.Remark1, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Remark1) } })
      
         </div>

        <!--备注2-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.Remark2) </label>
			@Html.EditorFor(x => x.Remark2, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Remark2) } })
      
         </div>
	   </div>
    </div>
 <div class="form-group form-group-sm">
      <div class="row">

		
      <!--特殊标志-->
      <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
              <label class="control-label"><span class="required">@Html.DisplayNameFor(model => model.Flag)</span> </label>
              <div class="checkbox  no-margin">
              <label>
                 <input id="@Html.IdFor(model => model.Flag)"
                       name="@Html.NameFor(model => model.Flag)"
                       value="true" @(Model.Flag ? "checked=\"checked\"" : "")
                       class="checkbox style-0"
                       tabindex="6"
                       type="checkbox" />
                <span>@Html.DisplayNameFor(model => model.Flag)</span>
              </label>
            </div>
      </div>

        <!--司机-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.Driver) </label>
			@Html.EditorFor(x => x.Driver, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Driver) } })
      
         </div>

        <!--车牌-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.Transport) </label>
			@Html.EditorFor(x => x.Transport, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Transport) } })
      
         </div>
	    
   </div>
  </div>
</fieldset>
</form>
<!-- end waybill form  -->
</div>

<!-- end master section -->
<!--========================================================================================-->

