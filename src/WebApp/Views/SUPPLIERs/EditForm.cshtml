﻿@model WebApp.Models.SUPPLIER
<!-- begin master section -->
<div  class="main-form">
<!--begin supplier form  -->
<form id="supplier_form" method="post" novalidate="novalidate" >
@Html.AntiForgeryToken()
   @Html.HiddenFor(x=>x.ID)
 <fieldset>
 <div class="form-group form-group-sm">
      <div class="row">

        <!--供应商代码-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label"><span class="required">@Html.DisplayNameFor(model => model.SUPPLIERCODE)</span> </label>
			@Html.EditorFor(x => x.SUPPLIERCODE, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.SUPPLIERCODE) } })
      
         </div>

        <!--供应商名称-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label"><span class="required">@Html.DisplayNameFor(model => model.SUPPLIERNAME)</span> </label>
			@Html.EditorFor(x => x.SUPPLIERNAME, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.SUPPLIERNAME) } })
      
         </div>

		
      <!--是否禁用-->
      <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
              <label class="control-label"><span class="required">@Html.DisplayNameFor(model => model.ISDISABLED)</span> </label>
              <div class="checkbox  no-margin">
              <label>
                 <input id="@Html.IdFor(model => model.ISDISABLED)"
                       name="@Html.NameFor(model => model.ISDISABLED)"
                       value="true" @(Model.ISDISABLED ? "checked=\"checked\"" : "")
                       class="checkbox style-0"
                       tabindex="6"
                       type="checkbox" />
                <span>@Html.DisplayNameFor(model => model.ISDISABLED)</span>
              </label>
            </div>
      </div>

        <!--默认提货地址-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.ADDRESS1) </label>
			@Html.EditorFor(x => x.ADDRESS1, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.ADDRESS1) } })
      
         </div>

        <!--默认收货地址-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.ADDRESS2) </label>
			@Html.EditorFor(x => x.ADDRESS2, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.ADDRESS2) } })
      
         </div>

        <!--联系人-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.CONTACT) </label>
			@Html.EditorFor(x => x.CONTACT, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.CONTACT) } })
      
         </div>
	   </div>
    </div>
 <div class="form-group form-group-sm">
      <div class="row">

        <!--推送手机号码-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.PHONENUMBER) </label>
			@Html.EditorFor(x => x.PHONENUMBER, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.PHONENUMBER) } })
      
         </div>

        <!--邮件地址-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.EMAIL) </label>
			@Html.EditorFor(x => x.EMAIL, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.EMAIL) } })
      
         </div>

        <!--备注-->
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2">
            <label class="control-label">@Html.DisplayNameFor(model => model.NOTES) </label>
			@Html.EditorFor(x => x.NOTES, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.NOTES) } })
      
         </div>
	    
   </div>
  </div>
</fieldset>
</form>
<!-- end supplier form  -->
</div>

<!-- end master section -->
<!--========================================================================================-->

